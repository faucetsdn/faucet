version: 2
vlans:
    100:
        name: "clock"
        unicast_flood: True
        max_hosts: 3
    2001:
        name: "trusted network"
        unicast_flood: True
    2002:
        name: "untrusted network"
        unicast_flood: False
    2003:
        name: "roof network"
        unicast_flood: True
        max_hosts: 10
acls:
    101:
        - rule:
            dl_src: "ae:ad:61:7d:02:2f"
            actions:
                allow: 1
        - rule:
            actions:
                allow: 0
dps:
    zodiac-fx-1:
        dp_id: 0x1
        hardware: "ZodiacFX"
        interfaces:
            1:
                native_vlan: 100
                name: "clock"
            2:
                native_vlan: 100
                name: "VLAN 2001"
                acl_in: 100
    windscale-faucet-1:
        dp_id: 0x2
        description: "Josh's experimental AT-X930"
        hardware: "Allied-Telesis"
        interfaces:
            1:
                tagged_vlans: [2001,2002,2003]
                name: "port1.0.1"
                description: "windscale"
            2:
                native_vlan: 2001
                name: "port1.0.2"
                description: "vek-x"
            12:
                native_vlan: 2002
                name: "port1.0.12"
                acl_in: 101
            23:
                native_vlan: 2003
                name: "port1.0.23"
                description: "roof switch"
